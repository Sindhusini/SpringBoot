 <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"> 
  
 <hibernate-mapping>  
  <class name="com.trioedge.Employee" table="emp1000">  
    <id name="id">  
     <generator class="increment"></generator>  
    </id>  
            
    <property name="firstName" length="10"></property>  
    <property name="lastName" length="10"></property>  
            
  </class>  
            
 </hibernate-mapping>  